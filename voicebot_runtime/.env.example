# MongoDB Configuration
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_mongo_password
MONGODB_HOST=localhost
MONGODB_PORT=27017
DB_NAME=your_database_name
DB_CONNECTION_STRING=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_CONNECTION_HOST=127.0.0.1
REDIS_CONNECTION_PORT=6379
REDIS_CONNECTION_PASSWORD=your_redis_password
REDIS_DB_INDEX=0

# Logging Configuration
LOGS_DIR=${PWD}/logs
LOGS_LEVEL=info

# Telegram Bot Token
TG_VOICE_BOT_TOKEN=your_telegram_bot_token

# Application Encryption Key
APP_ENCRYPTION_KEY=your_app_encryption_key

# Proxy Configuration (optional)
USE_TG_PROXY=false
PROXY_CONNECTION=socks://user:password@host:port

# Local OpenAI API (optional)
LOCAL_OPENAI_API_URL=http://192.168.0.42:1234/v1/

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key

# VoiceBot OpenAI Models (optional)
# Defaults:
# - VOICEBOT_CATEGORIZATION_MODEL=gpt-4.1
# - VOICEBOT_TASK_CREATION_MODEL=gpt-4.1
VOICEBOT_CATEGORIZATION_MODEL=
VOICEBOT_TASK_CREATION_MODEL=

# VoiceBot categorization cost guards (optional)
# Skip categorization for trivial short text messages (e.g. "ok", "да", "/help")
VOICEBOT_CATEGORIZATION_SHORT_TEXT_MAX_CHARS=24
VOICEBOT_CATEGORIZATION_SHORT_TEXT_MAX_WORDS=3

# Backend Configuration
BACKEND_PORT=8083

# Admin CRM Credentials
ADMIN_CRM_PASSWORD=your_admin_password
ADMIN_CRM_KEY=your_admin_key

# Google Drive Folder IDs
TRANSCRIPTIONS_FOLDER_ID=your_transcriptions_folder_id

# Telegram Beta Bot Token
TG_VOICE_BOT_BETA_TOKEN=your_beta_bot_token

# Test Configuration
TRANSCRIPTIONS_TEST_FOLDER_ID=your_test_folder_id
VOICE_BOT_IS_BETA=true

# Voice Web Interface
VOICE_WEB_INTERFACE_URL=http://localhost:5173
VOICE_WEB_INTERFACE_SOCKET_PORT=3000
SOCKET_KEY=your_socket_key

# FFmpeg Configuration
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
CONVERT_TO_MP3=false

# Agents API Configuration
AGENTS_API_URL=
AGENTS_API_BEARER_TOKEN=your_agents_api_token

# Prompt Chains API Configuration (for session title generation)
PROMPT_CHAINS_API_URL=
PROMPT_CHAINS_API_TOKEN=your_prompt_chains_jwt_token

# GitHub Configuration
GITHUB_API_KEY=your_github_personal_access_token
GITHUB_REPO_OWNER=your_github_org_or_username

# Repositories for different content types
GITHUB_REPO_PROMPTS=prompt
GITHUB_REPO_AGENTS=agent
GITHUB_REPO_PROJECTS=agent

# Branches for different repositories
GITHUB_REPO_BRANCH_PROMPTS=main
GITHUB_REPO_BRANCH_AGENTS=master
GITHUB_REPO_BRANCH_PROJECTS=master

# Default branch (fallback)
GITHUB_REPO_BRANCH=main

# Voice Bot Notifications
VOICE_BOT_NOTIFIES_URL=
VOICE_BOT_NOTIFIES_BEARER_TOKEN=your_notifies_bearer_token
# Optional local event hooks config (YAML preferred; JSON still supported).
# File maps `event -> [{ cmd, args }, ...]`. The event envelope JSON is appended
# by the runner as the last CLI argument (not passed via env).
# Default: ./notifies.hooks.yaml (set empty to disable)
VOICE_BOT_NOTIFY_HOOKS_CONFIG=
