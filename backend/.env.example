# Copilot Backend Environment Configuration
# Copy to .env and fill in values
# Environment-specific overrides: .env.development, .env.production

# =============================================================================
# Server Configuration
# =============================================================================
API_PORT=3002
MINIAPP_BACKEND_PORT=8084
NODE_ENV=development
INSTANCE_ID=0

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGO_USER=content
MONGO_PASSWORD=<REPLACE_ME>
MONGODB_HOST=localhost
MONGODB_PORT=27017
DB_NAME=content
# Full connection string (overrides individual settings if provided)
MONGODB_CONNECTION_STRING=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${DB_NAME}

# =============================================================================
# Redis Configuration (for BullMQ workers)
# =============================================================================
REDIS_CONNECTION_HOST=127.0.0.1
REDIS_CONNECTION_PORT=6379
REDIS_CONNECTION_PASSWORD=<REPLACE_ME>
REDIS_DB_INDEX=0

# =============================================================================
# Authentication
# =============================================================================
# Cookie domain for auth token
AUTH_COOKIE_DOMAIN=.stratospace.fun

# =============================================================================
# Miniapp Authentication
# =============================================================================
TG_MINIAPP_BOT_TOKEN=<REPLACE_ME>
IS_MINIAPP_DEBUG_MODE=false
MINIAPP_DIST_PATH=

# =============================================================================
# Logging
# =============================================================================
LOGS_DIR=${PWD}/logs
LOGS_LEVEL=info

# =============================================================================
# Google APIs
# =============================================================================
# Path to Google service account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=${PWD}/google_service_account.json
# Google Sheets document ID (optional, for specific integrations)
GOOGLE_SHEET_DOC_ID=<REPLACE_ME>

# =============================================================================
# Figma Integration
# =============================================================================
FIGMA_TOKEN=<REPLACE_ME>

# =============================================================================
# File Uploads
# =============================================================================
UPLOADS_DIR=${PWD}/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# CRM Specific
# =============================================================================
# Performers payments folder in Google Drive
PERFORMERS_PAYMENTS_ROOT_FOLDER_ID=<REPLACE_ME>
# Task info folder in Google Drive
TASK_INFO_DRIVE_FOLDER_ID=<REPLACE_ME>

# =============================================================================
# Security
# =============================================================================
# Encryption key for sensitive data (also used for JWT signing)
APP_ENCRYPTION_KEY=<REPLACE_ME>
# Admin credentials
ADMIN_CRM_PASSWORD=<REPLACE_ME>
ADMIN_CRM_KEY=<REPLACE_ME>

# =============================================================================
# VoiceBot Configuration
# =============================================================================
# Queue suffix for dev/prod isolation (beta/gamma/false)
VOICE_BOT_IS_BETA=
# External notifications endpoint
VOICE_BOT_NOTIFIES_URL=
VOICE_BOT_NOTIFIES_BEARER_TOKEN=

# =============================================================================
# MCP Proxy Configuration
# =============================================================================
# MCP server URL for agent communication
MCP_SERVER_URL=http://localhost:3001
# Session timeout in milliseconds (default: 30 minutes)
MCP_SESSION_TIMEOUT=1800000
# Cleanup interval in milliseconds (default: 5 minutes)
MCP_CLEANUP_INTERVAL=300000

# =============================================================================
# OpenAI Configuration (for LLMGate)
# =============================================================================
OPENAI_API_KEY=<REPLACE_ME>
OPENAI_BASE_URL=https://api.openai.com/v1
