# Copilot Backend Environment Configuration
# Copy to .env and fill in values
# Environment-specific overrides: .env.development, .env.production

# =============================================================================
# Server Configuration
# =============================================================================
API_PORT=3002
NODE_ENV=development
INSTANCE_ID=0

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGO_USER=content
MONGO_PASSWORD=<REPLACE_ME>
MONGODB_HOST=localhost
MONGODB_PORT=27017
DB_NAME=content
# Full connection string (overrides individual settings if provided)
MONGODB_CONNECTION_STRING=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${DB_NAME}

# =============================================================================
# Redis Configuration (for BullMQ workers)
# =============================================================================
REDIS_CONNECTION_HOST=127.0.0.1
REDIS_CONNECTION_PORT=6379
REDIS_CONNECTION_PASSWORD=<REPLACE_ME>
REDIS_DB_INDEX=0

# =============================================================================
# Authentication
# =============================================================================
# Voicebot API for auth proxy
VOICEBOT_API_URL=https://voice.stratospace.fun
# Cookie domain for auth token
AUTH_COOKIE_DOMAIN=.stratospace.fun

# =============================================================================
# Logging
# =============================================================================
LOGS_DIR=${PWD}/logs
LOGS_LEVEL=info

# =============================================================================
# Google APIs
# =============================================================================
# Path to Google service account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=${PWD}/google_service_account.json
# Google Sheets document ID (optional, for specific integrations)
GOOGLE_SHEET_DOC_ID=<REPLACE_ME>

# =============================================================================
# Figma Integration
# =============================================================================
FIGMA_TOKEN=<REPLACE_ME>

# =============================================================================
# File Uploads
# =============================================================================
UPLOADS_DIR=${PWD}/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# CRM Specific
# =============================================================================
# Performers payments folder in Google Drive
PERFORMERS_PAYMENTS_ROOT_FOLDER_ID=<REPLACE_ME>
# Task info folder in Google Drive
TASK_INFO_DRIVE_FOLDER_ID=<REPLACE_ME>

# =============================================================================
# Security
# =============================================================================
# Encryption key for sensitive data
APP_ENCRYPTION_KEY=<REPLACE_ME>
# Admin credentials
ADMIN_CRM_PASSWORD=<REPLACE_ME>
ADMIN_CRM_KEY=<REPLACE_ME>
